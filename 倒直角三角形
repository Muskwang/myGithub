class Test4{
    public static void main(String[] args){
        int m;
        java.util.Scanner sc=new java.util.Scanner(System.in);
        System.out.print("请输入总行数m:");
        m=sc.nextInt();

        int i=m;
        while(i>=1){
            int j=1;
            while(j<=i){
                System.out.print("*");
                j++;
             }
             System.out.println();
             i--;            
        }
    }
}
